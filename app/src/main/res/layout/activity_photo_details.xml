<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/tvPhotoDetailsUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="28sp"
        tools:text="dino" />

    <ImageView
        android:id="@+id/ivPhotoDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_below="@+id/tvPhotoDetailsUsername"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPhotoDetailsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPhotoDetailsImage"
        android:layout_marginTop="28dp"
        android:textSize="18sp"
        tools:text="Don't mind me - just coding and vibing to lo-fi" />

</RelativeLayout>